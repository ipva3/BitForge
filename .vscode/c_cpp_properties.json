  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/BitForge.Core/src/**",
        "${VULKAN_SDK}/include"
      ],
      "defines": [
        "_DEBUG",
        "UNICODE",
        "_UNICODE",
        "BFEXPORT",
        "_GNU_SOURCE"
      ],
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c17",
