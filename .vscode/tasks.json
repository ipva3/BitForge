{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build Engine",
      "windows": {
        "command": "${workspaceFolder}/BitForge.Engine/build.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/BitForge.Engine/build.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/BitForge.Engine"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Build Testbed",
      "windows": {
        "command": "${workspaceFolder}/BitForge.TestBed/build.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/BitForge.TestBed/build.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/BitForge.TestBed"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Build Everything",
      "windows": {
        "command": "${workspaceFolder}/build-all.bat",
      },
      "linux": {
        "command": "${workspaceFolder}/build-all.sh",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}